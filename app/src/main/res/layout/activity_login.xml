<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our app"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorW"
            android:paddingTop="15dp"
            android:layout_gravity="center"/>
        <RadioGroup
            android:id="@+id/userType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vous etes:"
                    android:layout_marginStart="35dp"
                    android:id="@+id/type"
                    android:textColor="@color/colorW"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="35dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Médecin"
                    android:layout_marginStart="20dp"
                    android:layout_toRightOf="@+id/type"
                    android:layout_marginTop="5dp"
                    android:id="@+id/medecin"
                    android:layout_marginLeft="50dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Infirmier"
                    android:layout_toRightOf="@+id/medecin"
                    android:id="@+id/infirmier"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>
        </RadioGroup>

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_bg"
            android:drawableStart="@drawable/outline_portrait_black_18dp"
            android:drawableLeft="@drawable/outline_portrait_black_18dp"
            android:drawablePadding="10dp"
            android:hint="Username"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="24dp"></EditText>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:drawableStart="@drawable/outline_vpn_key_black_18dp"
            android:drawableLeft="@drawable/outline_vpn_key_black_18dp"
            android:drawablePadding="10dp"
            android:hint="password"
            android:background="@drawable/edit_bg"
            android:inputType="textPassword"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="24dp"></EditText>

        <TextView
            android:id="@+id/mdpO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:text="Mot De Passe Oublié ?"
            android:textColor="@color/colorPrimary" />



        <Button
            android:id="@+id/login"

            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_corners"
            android:text="Connecter-Vous"
            android:textColor="@color/colorWB"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="30dp"
            android:paddingLeft="20dp"
            android:text="Vous n'avez pas un compte? Inscrivez vous"
            android:id="@+id/insc"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"></TextView>


    </LinearLayout>


</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedRegisterFragment">

    <!-- TODO: Update blank fragment layout -->
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
               <EditText
                   android:id="@+id/nom"
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                   android:layout_marginTop="20dp"
                   android:drawableStart="@drawable/nom"
                   android:drawablePadding="10dp"
                   android:layout_marginStart="24dp"
                   android:layout_marginEnd="10dp"
                   android:hint="Nom"
                   android:drawableLeft="@drawable/mail"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="10dp"
                   android:background="@drawable/edit_bg"></EditText>
               <EditText
                   android:id="@+id/prenom"
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                   android:layout_marginStart="24dp"
                   android:layout_marginEnd="10dp"
                   android:hint="Prenom"
                   android:layout_marginTop="10dp"
                   android:background="@drawable/edit_bg"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="10dp"></EditText>
               <EditText
                   android:id="@+id/grade"
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                   android:layout_marginStart="24dp"
                   android:layout_marginEnd="10dp"
                   android:hint="Grade"
                   android:layout_marginTop="10dp"
                   android:background="@drawable/edit_bg"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="10dp"></EditText>

               <EditText
                   android:id="@+id/mailI"
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                   android:drawableStart="@drawable/mail"
                   android:drawablePadding="10dp"
                   android:layout_marginStart="24dp"
                   android:layout_marginEnd="10dp"
                   android:hint="E-mail"
                   android:layout_marginTop="10dp"
                   android:drawableLeft="@drawable/mail"
                   android:background="@drawable/edit_bg"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="10dp"></EditText>
               <EditText
                   android:id="@+id/userI"
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                   android:drawableStart="@drawable/outline_portrait_black_18dp"
                   android:drawablePadding="10dp"
                   android:layout_marginStart="24dp"
                   android:layout_marginEnd="10dp"
                   android:layout_marginTop="10dp"
                   android:hint="Username"
                   android:drawableLeft="@drawable/outline_portrait_black_18dp"
                   android:background="@drawable/edit_bg"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="10dp"></EditText>

               <EditText
                   android:id="@+id/passI"
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                   android:drawableStart="@drawable/outline_vpn_key_black_18dp"
                   android:drawablePadding="10dp"
                   android:layout_marginStart="24dp"
                   android:layout_marginEnd="10dp"
                   android:hint="Password"
                   android:layout_marginTop="10dp"
                   android:background="@drawable/edit_bg"
                   android:inputType="textPassword"
                   android:drawableLeft="@drawable/outline_vpn_key_black_18dp"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="10dp"></EditText>
               <EditText
                   android:id="@+id/num"
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                   android:drawableStart="@drawable/tel"
                   android:drawablePadding="10dp"
                   android:layout_marginStart="24dp"
                   android:layout_marginEnd="10dp"
                   android:hint="Mobile"
                   android:layout_marginTop="10dp"
                   android:background="@drawable/edit_bg"
                   android:drawableLeft="@drawable/tel"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="10dp"></EditText>
               <Button
                   android:id="@+id/insc"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="10dp"
                   android:layout_marginEnd="10dp"
                   android:layout_marginTop="50dp"
                   android:layout_marginBottom="30dp"
                   android:text="Inscription"
                   android:background="@drawable/button_corners"
                   android:textColor="@color/colorWB">
               </Button>        </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".HommeHospitalisationFragment">
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="150dp"
        android:text="Occupation des salles"
        android:textColor="@color/colorW"
        android:textSize="15dp"
           android:textStyle="bold"/>
                <Spinner
                android:id="@+id/spinnerHosp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

    <ListView
        android:id="@+id/lstvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical"
        android:layout_marginBottom="10dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

    <Button
        android:id="@+id/ajoutPatient"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lstvw"
        android:background="@drawable/ic_add_circle_black_24dp"
        android:textColor="@color/colorWB"
        android:layout_marginStart="60dp"
        tools:ignore="NotSibling"
        android:layout_marginLeft="40dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/liblithosp"
        android:textColor="@color/colorWB"
        android:layout_toRightOf="@+id/ajoutPatient"
        android:layout_marginLeft="60dp"
        android:layout_alignBottom="@+id/lstvw"
        android:background="@drawable/ic_delete_black_24dp"
        tools:ignore="NotSibling" />

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="30dp"
            android:text="Liste des patients hospitalisÃ©s"
                android:id="@+id/listepathospi"
            android:textColor="@color/colorW"
            android:textSize="15dp"
            android:textStyle="bold"/>

            <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/listHosp"
                android:layout_marginTop="30dp"
                android:scrollbars="vertical">

        </ListView>
        </RelativeLayout>
    </LinearLayout>
